<!doctype html>
<title>Hello from Sinatra</title>
<% if @name %>
  <h1>Hello! Welcome to Dinner Date</h1>
<% else %>
  <h1>Hello World!</h1>
<% end %>

<div id="contact-form">
  <h1>Plan your party</h1>
  <form method="post" action="/signup">

    <label for="name">Name: </label>
    <input type="text" id="name" name="name" value="" placeholder="Rob Paskin" required="required" autofocus="autofocus"/>

    <label for="email">Email address: </label>
    <input type="email" id="email" name="email" value="" placeholder="rob@example.com" required="required"/>

    <label for="occasion">Occasion: </label>
    <input type="text" id="occasion" name="occasion" value="" placeholder="Birthday party" required="required"/>

    <label for="guests">Number of guests: </label>
    <input type="number" id="guests" name="guests" value="" placeholder="8" required="required"/>

    <label for="location">Location: </label>
    <input type="text" id="location" name="location" value="" placeholder="Hackney" required="required"/>

    <label for="budget">Budget Â£ (per head): </label>
    <input type="number" id="budget" name="budget" value="" placeholder="50" required="required"/>





    <input type="submit" value="submit" id="submit-button">
  </form>
</div>